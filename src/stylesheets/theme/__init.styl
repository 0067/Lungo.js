@import "../CSSmethods/vendor.styl"

/* -------------------------- COLOUR -------------------------- */
CONTENT         = #f5f5f5
COLOR           = #333
COLOR_secondary = #95a5a6
COLOR_cancel    = #e74c3c
COLOR_success   = #2ecc71

THEME           = #0093D5
THEME_light     = lighten(THEME, 15%)
