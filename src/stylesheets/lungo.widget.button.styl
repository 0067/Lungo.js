.button, button
  display: inline-block
  border: none
  cursor: pointer
  font-family: inherit
  font-weight: inherit
  text-align: center
  text-decoration: none
  outline: none
  background: none

  header &
    padding: 0 0.5em
    height: BUTTON_HEIGHT
    min-width: BUTTON_HEIGHT
    font-size: 1.0em
    line-height: BUTTON_HEIGHT
    & > .icon
      font-size: 1.4em
    & > abbr
      font-size: FONT_SIZE_SMALL
    & .icon + abbr
      position: relative
      left: 0.2em
      display: inline
      float: right

  article &
    font-size: 1.1em
    line-height: 2.5em

    &.icon
      padding: 0 0.65em
    &:not(.icon)
      padding: 0 1em
      & .icon + abbr
        margin-left: 0.5em

    &.large
      font-size: FONT_SIZE_LARGE
    &.small
      font-size: FONT_SIZE_SMALL
    &.tiny
      font-size: FONT_SIZE_TINY

    &.anchor
      width: 100%
      position: relative
      &:not(.icon) .icon
        position: absolute
        left: 1.0em
