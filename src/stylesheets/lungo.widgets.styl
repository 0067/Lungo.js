/* ================================  TAG  ================================ */
.tag
  display: inline-block
  padding: 0 3px
  font-size: FONT_SIZE_TINY !important
  line-height: 1.25em
  height: 1.35em
  text-align: center

size = 5px
.margin
  &.bottom
    margin-bottom: size


/* ================================  .LAYOUT  ================================ */
.layout
  display-box()
  height:  inherit !important
  &:not(.horizontal)
    box-orient(vertical)
  &:.horizontal
    box-orient(horizontal)
  & > *
    box-flex(1)
  & > [data-layout='secondary']
    box-flex(2)
  & > [data-layout='primary']
    box-flex(3)


